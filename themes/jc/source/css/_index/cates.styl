.cates
    overflow: hidden
    font-size: 16px
    margin-bottom: 15px
    overflow: hidden
    background: #fff
    position: fixed
    left: 0
    right: 0
    top: 0
    z-index: 3
    box-shadow: 0 2px 4px rgba(0,0,0,.1)

    &::-webkit-scrollbar
        display: none
    

    ul
        display: flex
        justify-content: space-between
        flex-wrap: wrap
        height: 100%
        font-size: 0
        position: relative
        -webkit-overflow-scrolling: touch
        overflow-x: scroll
        &::-webkit-scrollbar
            display: none
    li
        // display: inline-block
        text-align: center
        white-space: nowrap
        flex-basis: (100%/9)
        flex-grow: 1
        flex-basis: 0
        padding: 0 10px
        font-size: 16px
        
        a
            display: block
            line-height:48px;
            
        &.active
            background: bg-primary
            font-weight: 400
            a
                color: #fff

                cursor: default
                &:hover
                    color: #fff

