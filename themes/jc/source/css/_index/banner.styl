.banner 
    position:relative
    background-color: bg-primary
    overflow: hidden
    transition: background-color ease 1s
    &-bg 
        position: absolute
        z-index: 1
        top:0
        left: 0
        right: 0
        bottom: 0
        background: url("../img/ball_1408.png") no-repeat
        background-size: cover
        background-position: center 80%
        opacity: 0.02
    &-inner 
        z-index: 3
    &-ball 
        z-index: 2
        position: absolute
        &-1 
            height: 195px
            width: 195px
            background: url("../img/ball_195.png") center center no-repeat
            background-size: cover
            top: 50%
            margin-top: -95px
            left: - 95px
            +mobile() {
                height: 130px
                width: 130px
                margin-top: -65px
                left: -65px
            }

        &-2 
            width: 100px
            height: 100px
            background: url("../img/ball_1408.png") center center no-repeat
            background-size: cover
            top: -50px
            right: 0
            opacity: .8
    &-pic 
        display: flex
        align-items: center
        justify-content: center
        height: 250px
        img 
            max-width: 100%
        +mobile() {
            height: 200px
        }

.github-star-btn
    position fixed;
    right: 0;
    top: 0;
    background-color: #6190e8;
    width: 60px;
    line-height: 30px;
    
    text-align: center
    font-weight: 400
    margin-top: 15px;
    z-index: 30

    +mobile() {
        display: none;
    }
    a
        color: #fff;

.github-star
    vertical-align: middle
    margin-top: -2px;
    margin-right: 4px;

@keyframes shake {
  from, to {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }

  10%, 30%, 50%, 70%, 90% {
    -webkit-transform: translate3d(-10px, 0, 0);
    transform: translate3d(-10px, 0, 0);
  }

  20%, 40%, 60%, 80% {
    -webkit-transform: translate3d(10px, 0, 0);
    transform: translate3d(10px, 0, 0);
  }
}

.shake {
  -webkit-animation-name: shake;
  animation-name: shake;
  animation: shake 1s 1s both
}